{
  "manifest_version": 3,
  "name": "Search with Wikipedia",
  "description": "Highlight any word/phrase and search it on Wikipedia.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "contextMenus",
    "tabs"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "Search with Wikipedia"
  }
}
